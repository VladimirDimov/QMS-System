@using QMS.Web.ViewModels.Messages
@model QMS.Web.ViewModels.Users.UserDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        <span class="label label-default">Users</span>
        <small>@ViewBag.Title</small>
    </h1>
</div>

<dl class="dl-horizontal">
    <dt>Username</dt>
    <dd>@Model.UserName</dd>
    <dt>First name</dt>
    <dd>@Model.FirstName</dd>
    <dt>Last name</dt>
    <dd>@Model.LastName</dd>
    <dt>Email</dt>
    <dd>@Model.Email</dd>
    <dt>Areas</dt>
    <dd>
        @foreach (var area in Model.Areas)
            {
            <span>@Html.ActionLink(area.Name, "Details", "CompanyAreas", new { id = area.Id }, null)</span>
        }
    </dd>
</dl>

@if (User.Identity.IsAuthenticated)
{
    @Html.ActionLink("Send message", "Index", "Messages", new MessageCreateViewModel { ReceiverId = Model.Id }, new { @class = "btn btn-default" })
}
