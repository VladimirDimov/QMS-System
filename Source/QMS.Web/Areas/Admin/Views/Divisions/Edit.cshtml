@model QMS.Web.Models.Divisions.DivisionsUpdateModel
@{
    ViewBag.Title = "Edit";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Divisions", FormMethod.Post, new { @class = "col-md-6 col-md-offset-3" }))
{
    @Html.AntiForgeryToken()
    <form class="form-horizontal">
        <fieldset>
            <legend>Edit division</legend>
            <div class="form-group">
                @Html.HiddenFor(m => m.Id)
                @Html.EditorFor(m => m.Name)
                @Html.EditorFor(m => m.Description, new { @class = "formr-control" })
            </div>
            <div class="form-group">
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a href="~/admin/divisions/details/@Model.Id" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </fieldset>
    </form>
}
<div class="clearfix"></div>