@using PagedList
@using GridMvc.Html
@model IQueryable<QMS.Web.ViewModels.Divisions.DivisionListViewModel>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        <span class="label label-default">Divisions</span>
    </h1>
</div>

<span><a href="~/admin/divisions/create" class="btn btn-default pull-right"> Create </a></span>

<div>
    @Html.Grid(Model).Columns(col =>
{
    col.Add(m => m.Name).Titled("Name").Filterable(true).Sortable(true).SetWidth(40);
    col.Add(m => m.Description).Titled("Description").Filterable(true).Sortable(true).SetWidth(40);

    col.Add()
    .Sanitized(false)
    .Encoded(false)
    .RenderValueAs(m => Html.ActionLink("Details", "Details", "Divisions", new {area = "Admin", id = m.Id }, null))
    .SetWidth(20);
}).WithPaging(5, 5).Selectable(false).EmptyText("There area no divisions yet to display.")
</div>

<div class="clearfix"></div>
