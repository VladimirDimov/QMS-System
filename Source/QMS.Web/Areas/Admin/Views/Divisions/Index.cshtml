@model ICollection<QMS.Web.Models.Divisions.DivisionsListResponseModel>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        <span class="label label-default">Divisions</span>
    </h1>
</div>

<span><a href="~/admin/divisions/create" class="btn btn-default pull-right"> Create </a></span>

@{
    if (Model.Count == 0)
    {
        <h1>No Divisions yet!</h1>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var division in Model)
                {
                    <tr>
                        <td>@division.Name</td>
                        <td>@division.Description</td>
                        <td><a href="~/admin/divisions/details/@division.Id">Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

