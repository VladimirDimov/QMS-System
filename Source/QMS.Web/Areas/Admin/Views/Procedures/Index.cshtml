@model ICollection<QMS.Web.ViewModels.Procedures.ProcedureListViewModel>
@{
    ViewBag.Title = "Index";
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        <span class="label label-default">Procedures</span>
    </h1>
</div>

@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-default" })
<table class="table table-responsive table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var procedure in Model)
        {
            <tr>
                <td>@procedure.Name</td>
                <td>@procedure.Description</td>
                <td>@Html.ActionLink("Details", "Details", new { id = procedure.Id })</td>
            </tr>
        }
        @if (Model.Count == 0)
        {
            <tr>
                <td>No procedures yet to display.</td>
            </tr>
        }
    </tbody>
</table>
